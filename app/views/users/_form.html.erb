<%= form_for user do |f| %>
  <%= f.label :username, "Username:" %>
  <%= f.text_field :username %>
  <br /><br />
  <%= f.label :email, "Email:" %>
  <%= f.text_field :email, placeholder: "Example@example.com" %>
  <br /><br />
  <%= f.label :password, "Password:" %>
  <%= f.password_field :password %>
  <br /><br />
  <%= f.submit %>
<% end %>
